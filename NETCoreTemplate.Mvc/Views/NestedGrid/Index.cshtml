@{
    ViewData["Title"] = "Nested Grid";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Orders with Details</h5>
        <button class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>New Order
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 50px;"></th>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Order 1 -->
                    <tr>
                        <td>
                            <button class="btn btn-sm btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#details1">
                                <i class="fas fa-chevron-down"></i>
                            </button>
                        </td>
                        <td>#ORD-2024-001</td>
                        <td>John Smith</td>
                        <td>2024-03-15</td>
                        <td><span class="badge bg-success">Completed</span></td>
                        <td>$1,250.00</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="7" class="p-0">
                            <div class="collapse" id="details1">
                                <div class="p-3 bg-light">
                                    <h6 class="mb-3">Order Details</h6>
                                    <table class="table table-sm mb-0">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                                <th>Subtotal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Product A</td>
                                                <td>2</td>
                                                <td>$300.00</td>
                                                <td>$600.00</td>
                                            </tr>
                                            <tr>
                                                <td>Product B</td>
                                                <td>1</td>
                                                <td>$650.00</td>
                                                <td>$650.00</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </td>
                    </tr>

                    <!-- Order 2 -->
                    <tr>
                        <td>
                            <button class="btn btn-sm btn-link" type="button" data-bs-toggle="collapse" data-bs-target="#details2">
                                <i class="fas fa-chevron-down"></i>
                            </button>
                        </td>
                        <td>#ORD-2024-002</td>
                        <td>Jane Doe</td>
                        <td>2024-03-14</td>
                        <td><span class="badge bg-warning">Pending</span></td>
                        <td>$875.00</td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-1">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="7" class="p-0">
                            <div class="collapse" id="details2">
                                <div class="p-3 bg-light">
                                    <h6 class="mb-3">Order Details</h6>
                                    <table class="table table-sm mb-0">
                                        <thead>
                                            <tr>
                                                <th>Product</th>
                                                <th>Quantity</th>
                                                <th>Price</th>
                                                <th>Subtotal</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>Product C</td>
                                                <td>3</td>
                                                <td>$175.00</td>
                                                <td>$525.00</td>
                                            </tr>
                                            <tr>
                                                <td>Product D</td>
                                                <td>1</td>
                                                <td>$350.00</td>
                                                <td>$350.00</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div> 