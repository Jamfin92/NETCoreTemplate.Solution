@model IEnumerable<NETCoreTemplate.Mvc.Models.Product>

@{
    ViewData["Title"] = "Repository Pattern";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Repository Pattern Example</h1>
        <a asp-action="AddProduct" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add Product
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Description</td>
                                <td>@product.Price.ToString("C")</td>
                                <td>@product.StockQuantity</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="EditProduct" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form asp-action="DeleteProduct" asp-route-id="@product.Id" method="post" 
                                              onsubmit="return confirm('Are you sure you want to delete this product?');" 
                                              style="display: inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 